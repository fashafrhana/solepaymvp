<body>
  <div class="container">
    <div class="logo">SOLEPAY</div>
    <h1>üëü Step to Pay</h1>

    <select id="wallet">
      <option value="Touch 'n Go eWallet">Touch 'n Go eWallet</option>
      <option value="GrabPay">GrabPay</option>
      <option value="Boost">Boost</option>
    </select>

    <div class="toggle">
      <input type="checkbox" id="donate" />
      <label for="donate">Round up RM0.35 to support ocean cleanup üåä</label>
    </div>

    <button onclick="makePayment()">Step Here</button>

    <div class="progress-container">
      <div class="goal-text">Steps: <span id="stepCount">0</span> / 1000</div>
      <div class="progress-bar"><div class="progress-fill" id="progressFill"></div></div>
      <div id="goalMessage" style="margin-top: 8px; font-size: 14px; color: #00a75a;"></div>
    </div>

    <div class="message" id="status"></div>
  </div>

  <script>
    let steps = 0;
    const stepCount = document.getElementById("stepCount");
    const progressFill = document.getElementById("progressFill");
    const goalMessage = document.getElementById("goalMessage");

    function updateStepProgress() {
      steps += 100;
      if (steps > 1000) steps = 1000;
      stepCount.textContent = steps;
      const progress = (steps / 1000) * 100;
      progressFill.style.width = progress + "%";

      if (steps >= 1000) {
        goalMessage.textContent = "üéâ You‚Äôve unlocked your eco goal!";
      }
    }

    function makePayment() {
      const status = document.getElementById("status");
      const wallet = document.getElementById("wallet").value;
      const donate = document.getElementById("donate").checked;
      const today = new Date();
      const ref = "TXN-" + today.getFullYear()
                   + String(today.getMonth() + 1).padStart(2, '0')
                   + String(today.getDate()).padStart(2, '0')
                   + "-" + Math.floor(1000 + Math.random() * 9000);

      status.innerHTML = "üîÑ Connecting to SOLENET...";
      updateStepProgress();

      setTimeout(() => {
        status.innerHTML = `üöÄ Routing via ${wallet}...`;

        setTimeout(() => {
          let msg = `
            ‚úÖ Payment of RM15 completed!<br>
            ü™ô Paid from: ${wallet}<br>
            üìé Ref: ${ref}<br><br>
            üå± <strong>Estimated Carbon Impact:</strong> 0.6kg CO‚ÇÇ<br>
            üíö <strong>Supports:</strong> Local reforestation<br>
          `;

          if (donate) {
            msg += `üéÅ <strong>RM0.35 donated to ocean cleanup initiative üåä</strong><br>`;
          }

          msg += `<div class="badge">üåü Impact Level: Everyday Eco Hero</div>`;
          status.innerHTML = msg;
        }, 1500);
      }, 1500);
    }
  </script>
